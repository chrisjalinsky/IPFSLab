[Unit]
Description=Bootnode service
Documentation=https://github.com/ethereum/go-ethereum/wiki/Private-network

[Service]
ExecStart=/usr/bin/bootnode \
  --nat="extip:{{ ethereum_addr }}" \
  --addr=":{{ ethereum_port }}" \
  --nodekey="{{ ethereum_db_conf_dir }}/boot.key"
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
